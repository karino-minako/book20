<div class="container">
<div class="row">
<div class="col-xs-3">
<%= render 'books/list', book: @book, user: @user %>
</div>
<div class="col-xs-9">
<h3>Books</h3>
<table class="table table-striped">
<thead>
<tr>
  <th>image</th>
  <th>name</th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr> 
<td>
<%= link_to user_path(@user.id) do %>
  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no-image1.jpg", class: "img-circle pull-left profile-thumb" %>
<% end %>
</td>
<td>
<%= user.name %>
</td>
<td>
<%= link_to "Show", user_path(user.id) %>
</td>
</tr>  
<% end %>
</tbody>   
</table>
</div>
</div>
</div>