<div class="container">
<div class="row">
<div class="col-xs-3">
<%= render 'books/list', book: @book, user: @user %>
</div>
<div class="col-xs-9">
<table class="table table-striped">
<thead>
<tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= link_to book_path(book.id) do %>
  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no-image1.jpg", class: "img-circle pull-left profile-thumb" %>
<% end %>
<td>
<%= link_to book.title, book_path(book.id) %>
</td>
<td>
<%= book.body %>
</td>
</tr>  
<% end %>
</tbody>   
</table>
</div>
</div>
</div>